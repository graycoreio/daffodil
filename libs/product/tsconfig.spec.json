{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/libs/product",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@daffodil/core": [
        "dist/core"
      ],
      "@daffodil/core/testing": [
        "dist/core/testing"
      ],
      "@daffodil/core/graphql": [
        "dist/core/graphql"
      ],
      "@daffodil/core/state": [
        "dist/core/state"
      ],
      "@daffodil/driver/magento": [
        "dist/driver/magento"
      ],
      "@daffodil/product": [
        "libs/product/src/index.ts"
      ],
      "@daffodil/product/testing": [
        "libs/product/testing/src/index.ts"
      ],
    }
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
