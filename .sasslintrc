{
  "options": {
    "merge-default-rules": false,
    "formatter": "stylish",
    "max-warnings": 50
  },
  "rules": {
    "no-css-comments": 2,
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "empty-line-between-blocks": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 0,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "hex-notation": [
      2,
      {
        "style": "lowercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": "tab"
      }
    ],
    "property-sort-order": [
      1,
      {
        "ignore-custom-properties": true
      }
    ],
  }
}