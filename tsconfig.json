{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "esnext.asynciterable",
			"es2018"
    ],
    "baseUrl": ".",
    "paths": {
      "@daffodil/*": [
        "dist/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}